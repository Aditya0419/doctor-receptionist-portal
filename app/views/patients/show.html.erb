<div class="container mt-4">
  <h1>Patient Details</h1>

  <%= render @patient %>

  <div class="mt-3">
    <%= link_to "Edit this patient", edit_patient_path(@patient), class: 'btn btn-warning' %> |
    <%= link_to "Back to Patients", patients_path, class: 'btn btn-secondary' %>
    <%= button_to "Destroy this patient", @patient, method: :delete, class: 'btn btn-danger mt-2', data: { confirm: 'Are you sure?' } %>
  </div>
</div>
