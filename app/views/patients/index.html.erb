<h1>Registered Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>

      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>

        <td>
          <%= link_to 'Show', patient_path(patient) %>
          <%= link_to 'Edit', edit_patient_path(patient) %>
          <%= link_to 'Destroy', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Patient', new_patient_path %>
